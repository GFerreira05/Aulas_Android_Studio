<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tela_login_relative">

    <ImageView
        android:id="@+id/img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/logo_ite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/img"
        android:gravity="center_horizontal"
        android:text="FaÃ§a seu login em nossa plataforma"
        android:textColor="#006400"
        android:textSize="50px"/>

    <EditText
        android:id="@+id/insert1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/texto1"
        android:hint="Digite o seu login" />

    <EditText
        android:id="@+id/insert2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/insert1"
        android:hint="Digite o seu login" />

    <Button
        android:id="@+id/botao1"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        app:cornerRadius='0dp'
        android:backgroundTint="#008000"
        android:text="Login"/>

    <Button
        android:id="@+id/botao2"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/insert2"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/botao1"
        app:cornerRadius='0dp'
        android:backgroundTint="#ff0000"
        android:text="Limpa"/>

    <TextView
        android:id="@+id/texto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/botao1"
        android:gravity="center_horizontal"
        android:text="Crie sua conta agora mesmo"
        android:textColor="#006400"
        android:textSize="50px"/>

    <Button
        android:id="@+id/botao3"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#008000"
        android:text="Criar conta"
        app:cornerRadius='0dp' />

</RelativeLayout>